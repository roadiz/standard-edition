{
    "name": "roadiz/standard-edition",
    "description": "Roadiz standard edition",
    "type": "project",
    "require": {
        "php": ">=7.2",
        "roadiz/roadiz": "~1.3.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "phpstan/phpstan": "^0.11.19",
        "phpstan/phpstan-doctrine": "^0.11.6"
    },
    "suggest": {
        "sentry/sentry": "Allows monolog to send your log messages to a Sentry instance.",
        "php-http/guzzle6-adapter": "Required for sentry/sentry",
        "guzzlehttp/psr7": "Required for sentry/sentry",
        "roadiz/abstract-blog-theme": "Enhance your theme with many useful blog features.",
        "roadiz/abstract-pdf-theme": "Enhance your theme with PDF generation features.",
        "roadiz/abstract-api-theme": "Add minimal security to your theme custom public API.",
        "roadiz/abstract-user-theme": "Add a starter for public users space for your Roadiz theme."
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@rezo-zero.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Themes\\": "themes/",
            "GeneratedNodeSources\\": "app/gen-src/GeneratedNodeSources",
            "Proxies\\": "app/gen-src/Proxies"
        },
        "psr-0": {
            "GlobalUrlMatcher": "app/gen-src/Compiled/",
            "GlobalUrlGenerator": "app/gen-src/Compiled/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/DevAppKernel.php",
            "app/AppCache.php"
        ]
    },
    "scripts": {
        "cache-scripts": [
            "php bin/roadiz cache:clear -e prod",
            "php bin/roadiz cache:clear -e dev",
            "php bin/roadiz cache:clear -e prod --preview",
            "php bin/roadiz cache:clear-fpm -e prod",
            "php bin/roadiz cache:clear-fpm -e prod --preview",
            "php bin/roadiz themes:assets:install Debug",
            "php bin/roadiz themes:assets:install Install",
            "php bin/roadiz themes:assets:install Rozier"
        ],
        "rotate-secret": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::rotateSecret"
        ],
        "generate-key": [
            "php bin/roadiz generate:private-key"
        ],
        "pre-docker": [
            "php bin/roadiz themes:assets:install Rozier"
        ],
        "post-install-cmd": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::install",
            "@rotate-secret",
            "@cache-scripts",
            "@generate-key"
        ],
        "post-update-cmd": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::install",
            "@rotate-secret",
            "@cache-scripts",
            "@generate-key"
        ],
        "post-create-project-cmd": [
            "RZ\\Roadiz\\Utils\\Composer\\InstallFiles\\ScriptHandler::install",
            "@rotate-secret",
            "@cache-scripts",
            "@generate-key"
        ]
    },
    "extra": {
        "install-files": {
            "app/conf/config.default.yml": "./app/conf/config.yml",
            "samples/clear_cache.php.sample": "./web/clear_cache.php",
            "samples/install.php.sample": "./web/install.php",
            "samples/dev.php.sample": "./web/dev.php",
            "samples/index.php.sample": "./web/index.php",
            "samples/preview.php.sample": "./web/preview.php",
            "samples/Vagrantfile.sample": "./Vagrantfile"
        },
        "config-path": "./app/conf/config.yml"
    }
}
